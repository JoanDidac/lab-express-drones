<h2>Available drones</h2>


<div class="drone-container">
  {{#each drones}}
    <div class="drone-card drone{{@index}}">
      <a href="/drones/{{this._id}}/edit" class="edit-drone-btn">Edit</a>
      <form action="/drones/{{this._id}}/delete" method="POST">
      <button type="submit">Delete</button>
    </form>
      <div class="drone-specs">
        <strong>Name:</strong> {{this.name}}
      </div>
      <div class="drone-specs">
        <strong>Propellers:</strong> {{this.propellers}}
      </div>
      <div class="drone-specs">
        <strong>Max Speed:</strong> {{this.maxSpeed}}
      </div>
    </div>
  {{/each}}
</div>

<a href="/drones/create" class="create-drone-btn">Create Drone</a>
<a class="back-btn" href="/">Back</a>

