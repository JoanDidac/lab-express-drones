<h2>Update the drone</h2>

<form action="/drones/{{drone._id}}/edit" method="POST">
  <label for="name">Name:</label>
  <input type="text" name="name" id="name" value="{{drone.name}}" required>
  
  <label for="propellers">Propellers:</label>
  <input type="number" name="propellers" id="propellers" value="{{drone.propellers}}" required>
  
  <label for="maxSpeed">Max Speed:</label>
  <input type="number" name="maxSpeed" id="maxSpeed" value="{{drone.maxSpeed}}" required>

  <button type="submit">Update Drone</button>
</form>
